<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="hello" class="com.study.spring.Hello">
        <property name="person" ref="mary"></property>
    </bean>

    <bean id="smith" class="com.study.spring.Person">
        <property name="name" value="Mr.Smith"></property>
    </bean>

    <bean id="mary" class="com.study.spring.Person">
        <property name="name" value="Ms.Mary"></property>
    </bean>

</beans>